---
interface Technology {
    icon: any;
    name: string;
    alt: string;
}

interface Props {
    title: string;
    description: string;
    backgroundImage: ImageMetadata;
    technologies: Technology[];
    githubUrl: string;
    className?: string;
}

const {
    title,
    description,
    backgroundImage,
    technologies,
    githubUrl,
    className = ""
} = Astro.props;
---

<style define:vars={{
    backgroundImageUrl: `url(${backgroundImage.src})`
}}>
    .project-card-bg {
        background-image: var(--backgroundImageUrl);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .project-card-overlay {
        background: linear-gradient(
                135deg,
                rgba(0, 0, 0, 0.3) 0%,
                rgba(0, 0, 0, 0.1) 50%,
                rgba(0, 0, 0, 0.4) 100%
        );
    }

    .tech-container {
        backdrop-filter: blur(4px);
        background: rgba(0, 0, 0, 0.8);
    }

    .github-button {
        backdrop-filter: blur(8px);
        background: rgba(0, 0, 0, 0.9);
        transition: all 0.3s ease;
    }

    .github-button:hover {
        background: rgba(0, 0, 0, 1);
        transform: scale(1.05);
    }

    .project-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .project-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }
</style>

<article class={`project-card relative w-full aspect-square rounded-lg overflow-hidden shadow-lg group ${className}`}>
    <!-- Background Image -->
    <div class="absolute inset-0 project-card-bg"></div>

    <!-- Overlay -->
    <div class="absolute inset-0 project-card-overlay"></div>

    <!-- Content -->
    <div class="relative h-full p-4 flex flex-col justify-between">

        <!-- Technologies Container -->
        <div class="tech-container rounded-lg p-3 w-fit">
            <div class="flex gap-2 flex-wrap max-w-32">
                {technologies.map((tech) => {
                    const IconComponent = tech.icon;
                    return (
                        <div class="w-8 h-8 flex items-center bg-sage-200 justify-center rounded transition-colors" title={tech.name}>
                            <IconComponent class="w-6 h-6 text-blue-500" />
                        </div>
                    );
                })}
            </div>
        </div>

        <!-- Bottom Content -->
        <div class="flex items-end justify-between">
            <!-- Text Content -->
            <div class="flex-1 mr-4">
                <h3 class="text-white text-xl font-bold mb-2 leading-tight">
                    {title}
                </h3>
                <p class="text-gray-200 text-sm leading-relaxed line-clamp-3">
                    {description}
                </p>
            </div>

            <!-- GitHub Button -->
            <a
                    href={githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="github-button w-12 h-12 rounded-full flex items-center justify-center shrink-0"
                    title="Ver en GitHub"
            >
                <!-- GitHub Icon SVG -->
                <svg
                        class="w-6 h-6 text-white"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                >
